<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.details.LocationDetailsActivity">

    <include
        android:id="@+id/toolbar_bar_layout"
        layout="@layout/toolbar_layout" />
    
    <ImageView
        android:id="@+id/location_logo"
        android:contentDescription="@string/location_logo_image_desc"
        app:layout_constraintTop_toBottomOf="@id/toolbar_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/std_space"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/location_logo_size"
        android:adjustViewBounds="true"
        android:visibility="gone"
        />
    
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        app:layout_constraintTop_toBottomOf="@id/location_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" 
        android:textAppearance="@style/Theme.CleanAirSpaces.Subtitle1"
        android:id="@+id/location_name_tv"
        android:layout_marginTop="@dimen/std_space"
        android:gravity="center"
        android:textStyle="bold"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_name_tv"
        app:navGraph="@navigation/location_details_nav" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nav_bg"
        app:itemIconTint="@color/bottom_nav_icons_color"
        app:itemTextAppearanceActive="@style/Theme.CleanAirSpaces.Subtitle2"
        app:itemTextAppearanceInactive="@style/Theme.CleanAirSpaces.Subtitle2"
        app:itemTextColor="@color/bottom_nav_icons_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/details_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>