<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.history_fragment.HistoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/md_space">

        <HorizontalScrollView
            android:id="@+id/actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pm_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/std_space"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/aqi_beyond"
                    app:cardCornerRadius="@dimen/std_space"
                    app:cardElevation="@dimen/std_space">

                    <TextView
                        android:id="@+id/aqi_tv"
                        style="@style/Theme.CleanAirSpaces.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/std_space"
                        android:text="@string/air_quality_txt"
                        android:textColor="?colorOnPrimary"
                        android:textSize="@dimen/md_txt"
                        android:textStyle="bold"
                        android:drawablePadding="@dimen/sm_space" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/co2_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/std_space"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/aqi_beyond"
                    app:cardCornerRadius="@dimen/std_space"
                    app:cardElevation="@dimen/std_space">

                    <TextView
                        android:id="@+id/co2_tv"
                        style="@style/Theme.CleanAirSpaces.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/std_space"
                        android:text="@string/co_lbl"
                        android:textColor="?colorOnPrimary"
                        android:textSize="@dimen/md_txt"
                        android:textStyle="bold"
                        android:drawablePadding="@dimen/sm_space" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/tmp_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/std_space"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/aqi_beyond"
                    app:cardCornerRadius="@dimen/std_space"
                    app:cardElevation="@dimen/std_space">

                    <TextView
                        android:id="@+id/tmp_tv"
                        style="@style/Theme.CleanAirSpaces.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/std_space"
                        android:text="@string/tmp_lbl"
                        android:textColor="?colorOnPrimary"
                        android:textSize="@dimen/md_txt"
                        android:textStyle="bold"
                        android:drawablePadding="@dimen/sm_space" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/humidity_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/std_space"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/aqi_beyond"
                    app:cardCornerRadius="@dimen/std_space"
                    app:cardElevation="@dimen/std_space">

                    <TextView
                        android:id="@+id/humidity_tv"
                        style="@style/Theme.CleanAirSpaces.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/std_space"
                        android:text="@string/humidity_lbl"
                        android:textColor="?colorOnPrimary"
                        android:textSize="@dimen/md_txt"
                        android:textStyle="bold"
                        android:drawablePadding="@dimen/sm_space" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/tvoc_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/std_space"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/aqi_beyond"
                    app:cardCornerRadius="@dimen/std_space"
                    app:cardElevation="@dimen/std_space">

                    <TextView
                        android:id="@+id/tvoc_tv"
                        style="@style/Theme.CleanAirSpaces.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/std_space"
                        android:text="@string/tvoc_lbl"
                        android:textColor="?colorOnPrimary"
                        android:textSize="@dimen/md_txt"
                        android:textStyle="bold"
                        android:drawablePadding="@dimen/sm_space" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/outdoor_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/std_space"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/aqi_beyond"
                    app:cardCornerRadius="@dimen/std_space"
                    app:cardElevation="@dimen/std_space">

                    <TextView
                        android:id="@+id/outdoors_tv"
                        style="@style/Theme.CleanAirSpaces.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/std_space"
                        android:text="@string/outdoors_air_quality_txt"
                        android:textColor="?colorOnPrimary"
                        android:textSize="@dimen/md_txt"
                        android:textStyle="bold"
                        android:drawablePadding="@dimen/sm_space" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </HorizontalScrollView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/days_chart_lbl"
            style="@style/Theme.CleanAirSpaces.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/md_space"
            android:text="@string/last_seven_two_hours"
            android:textColor="?colorOnPrimary"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actions" />

        <LinearLayout
            android:id="@+id/days_chart_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chart_height"
            android:layout_marginTop="@dimen/std_space"
            android:background="@drawable/chart_bg"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/days_chart_lbl">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/days_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/std_space"
                android:layout_marginTop="@dimen/md_space"
                android:layout_marginEnd="@dimen/std_space"
                android:layout_marginBottom="@dimen/md_space"
                android:padding="@dimen/std_space" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/week_chart_lbl"
            style="@style/Theme.CleanAirSpaces.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/md_space"
            android:text="@string/last_week_lbl"
            android:textColor="?colorOnPrimary"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/days_chart_container" />


        <LinearLayout
            android:id="@+id/week_chart_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chart_height"
            android:layout_marginTop="@dimen/std_space"
            android:background="@drawable/chart_bg"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/week_chart_lbl">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/week_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/std_space"
                android:layout_marginTop="@dimen/md_space"
                android:layout_marginEnd="@dimen/std_space"
                android:layout_marginBottom="@dimen/md_space"
                android:padding="@dimen/std_space" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/months_chart_lbl"
            style="@style/Theme.CleanAirSpaces.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/md_space"
            android:text="@string/last_thirty_lbl"
            android:textColor="?colorOnPrimary"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/week_chart_container" />


        <LinearLayout
            android:id="@+id/month_chart_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chart_height"
            android:layout_marginTop="@dimen/md_space"
            android:background="@drawable/chart_bg"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/months_chart_lbl">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/month_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/std_space"
                android:layout_marginTop="@dimen/md_space"
                android:layout_marginEnd="@dimen/std_space"
                android:layout_marginBottom="@dimen/md_space"
                android:padding="@dimen/std_space" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>