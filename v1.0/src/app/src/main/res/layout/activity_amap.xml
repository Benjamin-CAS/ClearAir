<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.amap.AMapActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" android:id="@+id/toolbar_layout" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.amap.AMapActivity">


        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include layout="@layout/home_map_overlay"
            android:id="@+id/home_map_overlay"/>

        <ImageView
            android:id="@+id/my_location_btn"
            android:layout_gravity="bottom|start"
            android:layout_width="@dimen/clickable_std"
            android:layout_height="@dimen/clickable_std"
            android:contentDescription="@string/my_location_btn_desc"
            android:src="@drawable/ic_show_my_location"
            android:scaleType="center"
            android:background="@drawable/round_footer_bg"
            android:layout_margin="@dimen/md_space"
            android:elevation="@dimen/md_space"/>
    </FrameLayout>
</LinearLayout>