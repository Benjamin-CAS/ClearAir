<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.fragments.monitor_details.MonitorHistoryFragment">


    <ImageView
        android:id="@+id/location_logo"
        android:contentDescription="@string/location_logo_image_desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/sm_space"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/location_logo_size"
        android:adjustViewBounds="true"
        android:visibility="gone"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/Theme.CleanAirSpaces.Subtitle1"
        android:id="@+id/location_name_tv"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginTop="@dimen/sm_space"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/select_hint_tv"
        style="@style/Theme.CleanAirSpaces.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        app:layout_constraintTop_toBottomOf="@id/location_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/info_selector"
        android:layout_margin="@dimen/sm_space"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        android:text="@string/select_history_type_hint"/>

    <HorizontalScrollView
        app:layout_constraintStart_toEndOf="@id/select_hint_tv"
        app:layout_constraintTop_toBottomOf="@id/location_name_tv"
        android:layout_margin="@dimen/std_space"
        android:paddingEnd="@dimen/clickable_std"
        android:id="@+id/info_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pm_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sm_space"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="@dimen/sm_space"
                app:cardElevation="@dimen/sm_space">

                <TextView
                    android:id="@+id/aqi_tv"
                    style="@style/Theme.CleanAirSpaces.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/sm_space"
                    android:text="@string/air_quality_txt"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/sm_space" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/co2_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sm_space"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="@dimen/sm_space"
                app:cardElevation="@dimen/sm_space">

                <TextView
                    android:id="@+id/co2_tv"
                    style="@style/Theme.CleanAirSpaces.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/sm_space"
                    android:text="@string/co_lbl"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/sm_space" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tmp_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sm_space"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="@dimen/sm_space"
                app:cardElevation="@dimen/sm_space">

                <TextView
                    android:id="@+id/tmp_tv"
                    style="@style/Theme.CleanAirSpaces.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/sm_space"
                    android:text="@string/tmp_lbl"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/sm_space" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/humidity_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sm_space"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="@dimen/sm_space"
                app:cardElevation="@dimen/sm_space">

                <TextView
                    android:id="@+id/humidity_tv"
                    style="@style/Theme.CleanAirSpaces.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/sm_space"
                    android:text="@string/humidity_lbl"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/sm_space" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tvoc_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sm_space"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="@dimen/sm_space"
                app:cardElevation="@dimen/sm_space">

                <TextView
                    android:id="@+id/tvoc_tv"
                    style="@style/Theme.CleanAirSpaces.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/sm_space"
                    android:text="@string/tvoc_lbl"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/sm_space" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_selector"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="200dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/days_chart_lbl"
                style="@style/Theme.CleanAirSpaces.Body2"
                android:layout_width="0dp"
                android:gravity="start"
                android:paddingStart="@dimen/std_space"
                android:paddingEnd="@dimen/std_space"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/md_space"
                android:text="@string/last_seven_two_hours"/>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/sm_space"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/days_chart_lbl"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/days_chart_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sm_space"
                android:background="@drawable/chart_bg"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/days_chart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height"
                    android:layout_marginStart="@dimen/sm_space"
                    android:layout_marginTop="@dimen/std_space"
                    android:layout_marginEnd="@dimen/sm_space"
                    android:layout_marginBottom="@dimen/std_space"
                    android:paddingStart="@dimen/sm_space"
                    android:paddingEnd="@dimen/sm_space"/>

         <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/days_chart_value"
                    style="@style/Theme.CleanAirSpaces.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sm_space"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/week_chart_lbl"
                style="@style/Theme.CleanAirSpaces.Body2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="start"
                android:paddingStart="@dimen/std_space"
                android:paddingEnd="@dimen/std_space"
                android:layout_marginTop="@dimen/md_space"
                android:text="@string/last_week_lbl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/days_chart_container" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/sm_space"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/week_chart_lbl"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:id="@+id/week_chart_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sm_space"
                android:background="@drawable/chart_bg"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/week_chart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height"
                    android:layout_marginStart="@dimen/sm_space"
                    android:layout_marginTop="@dimen/std_space"
                    android:layout_marginEnd="@dimen/sm_space"
                    android:layout_marginBottom="@dimen/std_space"
                    android:paddingStart="@dimen/sm_space"
                    android:paddingEnd="@dimen/sm_space" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/week_chart_value"
                    style="@style/Theme.CleanAirSpaces.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sm_space"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/months_chart_lbl"
                style="@style/Theme.CleanAirSpaces.Body2"
                android:layout_width="0dp"
                android:gravity="start"
                android:paddingStart="@dimen/std_space"
                android:paddingEnd="@dimen/std_space"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/md_space"
                android:text="@string/last_thirty_lbl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/week_chart_container" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/sm_space"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/months_chart_lbl"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/month_chart_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_space"
                android:background="@drawable/chart_bg"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line3">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/month_chart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height"
                    android:layout_marginStart="@dimen/sm_space"
                    android:layout_marginTop="@dimen/std_space"
                    android:layout_marginEnd="@dimen/sm_space"
                    android:layout_marginBottom="@dimen/std_space"
                    android:paddingStart="@dimen/sm_space"
                    android:paddingEnd="@dimen/sm_space" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/month_chart_value"
                    style="@style/Theme.CleanAirSpaces.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sm_space"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>