<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add_locations.SearchLocationActivity">


    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout"
        android:layout_margin="@dimen/md_space"
        app:cardCornerRadius="@dimen/std_space"
        app:cardElevation="@dimen/std_space"
        app:cardBackgroundColor="@color/whitish"
        >

        <EditText
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:hint="@string/search"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/sm_space"
            android:paddingEnd="@dimen/sm_space"
            android:inputType="text"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/sm_space"
            style="@style/Theme.CleanAirSpaces.SearchView"
            android:focusable="true"
            android:background="@android:color/transparent" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/no_locations_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.CleanAirSpaces.Body1"
        app:layout_constraintTop_toBottomOf="@id/search_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/md_space"
        android:text="@string/search_long_hint"
        android:textSize="@dimen/md_txt"
        android:gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/location_suggestions_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/md_space"
        app:layout_constraintTop_toBottomOf="@id/no_locations_hint"
        android:layout_margin="@dimen/std_space"/>
</androidx.constraintlayout.widget.ConstraintLayout>