<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CleanAirSpaces" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_200</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Status bar icon colors black -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <!-- menu overflow -->
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>


    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_settings_gear</item>
        <item name="android:tint">@color/blue_200</item>
    </style>

    <!-- material dialog -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/CustomDialogTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomDialogBtn</item>
        <item name="buttonBarNeutralButtonStyle">@style/CustomDialogBtn</item>
    </style>

    <style name="CustomDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomDialogBtn" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/fira_sans</item>
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="appToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/Theme.CleanAirSpaces.Title5</item>
        <item name="subtitleTextAppearance">@style/Theme.CleanAirSpaces.Subtitle2</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/blue_500</item>
        <item name="android:titleTextColor">@color/blue_500</item>
        <item name="subtitleTextColor">@color/blue_500</item>
        <item name="android:subtitleTextColor">@color/blue_500</item>
    </style>


    <style name="appToolbarPopUpMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.CleanAirSpaces.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingBottom">@dimen/std_space</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
    </style>

    <style name="Theme.CleanAirSpaces.TextInputLayoutDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
        <item name="android:paddingBottom">@dimen/std_space</item>
    </style>

</resources>